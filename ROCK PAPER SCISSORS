import tkinter as tk
from tkinter import messagebox
import random
from pyfiglet import Figlet

# Setup choices
choices = ["rock", "paper", "scissors"]
player_score = 0
computer_score = 0
round_num = 1

# Create main app window
root = tk.Tk()
root.title("ðŸŽ® Rock-Paper-Scissors by Manaswitha")
root.geometry("550x550")
root.config(bg="#001f3f")  # Deep Blue background

# Heading label
title_label = tk.Label(
    root,
    text="Rock - Paper - Scissors",
    font=("Arial Black", 20, "bold"),
    fg="#00aced",  # Bright Blue
    bg="#001f3f"
)
title_label.pack(pady=20)

# Scoreboard
score_label = tk.Label(root, text="You: 0 | Computer: 0", font=("Helvetica", 14),
                       bg="#001f3f", fg="white")
score_label.pack()

# Result label (shows move results)
result_label = tk.Label(root, text="", font=("Helvetica", 16),
                        bg="#001f3f", fg="#7FDBFF")
result_label.pack(pady=20)

# Winner display label (bold win message)
winner_label = tk.Label(root, text="", font=("Helvetica", 16, "bold"),
                        bg="#001f3f", fg="yellow")
winner_label.pack(pady=5)

# Round label
round_label = tk.Label(root, text="Round 1", font=("Helvetica", 14),
                       bg="#001f3f", fg="#39CCCC")
round_label.pack()

# Show big winner in a popup
def show_big_winner(winner):
    figlet = Figlet(font='slant')
    big_message = figlet.renderText(winner)
    messagebox.showinfo("ðŸŽ‰ Final Winner!", big_message)

# Game logic
def play(user_choice):
    global player_score, computer_score, round_num
    computer_choice = random.choice(choices)
    round_label.config(text=f"Round {round_num}")

    if user_choice == computer_choice:
        result = f"ðŸ˜ Draw! Both chose {user_choice.capitalize()}"
        winner_label.config(text="ðŸ˜ It's a draw!", fg="yellow")
    elif (user_choice == "rock" and computer_choice == "scissors") or \
         (user_choice == "paper" and computer_choice == "rock") or \
         (user_choice == "scissors" and computer_choice == "paper"):
        player_score += 1
        result = f"âœ… You Win! {user_choice.capitalize()} beats {computer_choice.capitalize()}"
        winner_label.config(text="âœ… You win this round!", fg="lightgreen")
    else:
        computer_score += 1
        result = f"âŒ You Lose! {computer_choice.capitalize()} beats {user_choice.capitalize()}"
        winner_label.config(text="âŒ Computer wins this round!", fg="red")

    score_label.config(text=f"You: {player_score} | Computer: {computer_score}")
    result_label.config(text=result)
    round_num += 1

# End game and show result
def exit_game():
    if player_score > computer_score:
        show_big_winner("YOU WIN")
    elif player_score < computer_score:
        show_big_winner("COMPUTER WINS")
    else:
        show_big_winner("IT'S A TIE")
    root.destroy()

# Buttons for Rock, Paper, Scissors
btn_frame = tk.Frame(root, bg="#001f3f")
btn_frame.pack(pady=10)

rock_btn = tk.Button(btn_frame, text="ðŸª¨ Rock", width=12, height=2,
                     bg="#0074D9", fg="white", font=("Helvetica", 12, "bold"),
                     command=lambda: play("rock"))
rock_btn.grid(row=0, column=0, padx=10)

paper_btn = tk.Button(btn_frame, text="ðŸ“„ Paper", width=12, height=2,
                      bg="#3D9970", fg="white", font=("Helvetica", 12, "bold"),
                      command=lambda: play("paper"))
paper_btn.grid(row=0, column=1, padx=10)

scissors_btn = tk.Button(btn_frame, text="âœ‚ï¸ Scissors", width=12, height=2,
                         bg="#FF4136", fg="white", font=("Helvetica", 12, "bold"),
                         command=lambda: play("scissors"))
scissors_btn.grid(row=0, column=2, padx=10)

# Exit Button
exit_btn = tk.Button(root, text="Exit Game", bg="#85144b", fg="white",
                     font=("Helvetica", 12, "bold"), command=exit_game)
exit_btn.pack(pady=20)

# Start the GUI event loop
root.mainloop()
